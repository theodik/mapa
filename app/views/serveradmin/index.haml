.row
  .large-12.columns
    .row
      .large-12.columns
        .panel
          .row
            -foreach ($servers as $server)
              %hr
              .column
                %strong=$server->name
                .row.clear
                  .column
                    Adresa k hráčům:
                    -echo $this->link_tag($server->url)
                  .column
                    Přidal: #{$server->user->name}
                  .small-4.column{'style' => 'margin-bottom: 20px'}
                    -echo $this->link_to('Upravit server', 'admin_edit_server', array('id' => $server->id))
                    %br
                    -echo $this->link_to('Smazat server', 'admin_delete_server', array('id' => $server->id))
    %row
      .large-8.columns
        -echo $this->link_to('Přidat server', 'admin_new_server')
